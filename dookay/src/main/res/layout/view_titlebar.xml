<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/header_middle_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/middleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/offset_5"
            android:maxLines="1"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_18" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linear_padding"
        android:layout_centerVertical="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/header_left_arrow"
            android:layout_width="@dimen/offset_80"
            android:layout_height="@dimen/offset_50"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/offset_20"
            android:textColor="@android:color/white" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/header_right_layout"
        android:layout_width="@dimen/offset_100"
        android:layout_height="@dimen/offset_50"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linear_padding"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        android:paddingRight="@dimen/offset_12"
        android:visibility="visible">
        <TextView
            android:id="@+id/header_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxLines="1"
            android:padding="@dimen/offset_5"
            android:text="明细"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_14"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/header_right_pic"
            android:layout_width="@dimen/offset_28"
            android:layout_height="@dimen/offset_28"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>